<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Halal Restaurants in Barcelona, Halal food"
    />
    <meta name="keywords" content="halal food, Restaurants, Barcelona, Spain" />
    <title>Halal Restaurants in Barcelona</title>
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="/dist/styles.css" />
    <script>
      console.log('loaded...', '<%= counter %>');
    </script>
  </head>
  <body>
    <header>
      <div class="container">
        <h1>Halal Restaurants in Barcelona</h1>
      </div>
    </header>

    <main>
      <div class="container">
        <div class="cards">
          <% data.forEach(function(item){ %>
          <div class="card">
            <h4 class="card__title"><%= item.title %></h4>
            <div class="card__content">
              <p><%= item.cusineType %></p>
              <p><%= item.stars %></p>
              <p><%= item.totalOpinions %></p>
            </div>
            <div class="card__actions">
              <a href="<%= item.url %>" target="_blank" class="card__go">Go</a>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </main>
    <footer>
      <div class="container">
        <p>&copy; Halal Restaurants in Barcelona <%= currentYear %></p>
      </div>
    </footer>
  </body>
</html>
